extends layout/layout.pug

block content
    if errorMessage 
        span=errorMessage
    form(method="post" enctype="multipart/form-data")
        input(type="file" placeholder="Avatar" name="avatar")
        input(type="text" required placeholder="name" name="name")
        input(type="text" required placeholder="username" name="username")
        input(type="password" required placeholder="password" name="password" min=4)
        input(type="password" required placeholder="check password" name="password2")
        input(type="text" required placeholder="location" name="location")
        input(type="email" required placeholder="email" name="email")
        input(type="submit" value="Sign up!")