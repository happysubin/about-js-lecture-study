extends layout/layout.pug

block content 
    if errorMessage
        span=errorMessage
    img(src=`/${user.avatarUrl}` alt="no img")
    form(method="post" enctype="multipart/form-data")
        input(type="file" placeholder="Avatar" name="avatar" accept="image/*")
        input(type="text" required placeholder="name" name="name" value=user.name)
        input(type="text" required placeholder="username" name="username" value=user.username)
        input(type="text" required placeholder="location" name="location" value=user.location)
        input(type="email" required placeholder="email" name="email" value=user.email)
        input(type="submit" value="Edit Profile")
        
    a(href="/user/change-password")
        h4 Change-password ||
        //-session user에서 값을 가져온다.
    a(href="/user/delete")
        h4 Delete User