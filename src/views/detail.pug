extends layout/layout.pug

block content 
    video(src=`/${video.videoURL}`)
    h1=video.title
    h3=video.description
    h4=video.createdAt
    each hashtag in video.hashtags
        ul 
            li=hashtag 
    
    a(href=`/video/${video.id}/delete`)
        button Delete video
    a(href=`/video/${video.id}/edit`)
        button Edit video