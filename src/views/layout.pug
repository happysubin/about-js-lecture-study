doctype html 
html(lang='ko')
    head    
        title #{pageTitle} | #{siteName}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body 
        header
           
            h1=pageTitle
        nav
                ul
                    
                    li
                        a(href="/") Home
                    li
                        a(href="/search") Search   
                    
                    if loggedIn
                        li  
                            a(href="/users/logout") Logout
                        li 
                            a(href="/my-profile") My-Profile #{user.username}
                        li 
                            a(href="/users/edit") Edit Profile
                        li
                            a(href="/videos/upload") Upload Video
                        li 
                            a(href=`/users/${user._id}`) My Profile
                        
                    else
                        li
                            a(href="/join") Join
                        li
                            a(href="/login") Login
        main     
            block content
        include partials/footer

        script(src="/assets/js/main.js") 
    //- 정적파일들을 제공하기위해 assets와 layout pug를 연결!